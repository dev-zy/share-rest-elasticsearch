<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ucloudlink.css</groupId>
	<artifactId>css-rest-elasticsearch</artifactId>
	<version>5.6.8.RELEASE</version>
	<name>css-rest-elasticsearch</name>
	<description>css-rest-elasticsearch</description>
	<properties>
		<java.version>1.8</java.version>
		<project.build.encoding>UTF-8</project.build.encoding>
		<log4j2.version>2.9.0</log4j2.version>
		<fastjson.version>1.2.47</fastjson.version>
		<jest.version>5.3.3</jest.version>
		<elasticsearch.version>5.6.0</elasticsearch.version>
	</properties>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>
	<scm>
		<url>https://github.com/dev-share/css-rest-elasticsearch</url>
		<connection>scm:git:git@github.com:dev-share/css-rest-elasticsearch.git</connection>
		<developerConnection>scm:git:git@github.com:dev-share/css-rest-elasticsearch.git</developerConnection>
	</scm>
	<developers>
		<developer>
			<name>Kervin</name>
			<email>yi.zhang@ucloudlink.com</email>
			<url>https://github.com/dev-share/css-rest-elasticsearch</url>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>${log4j2.version}</version>
		</dependency>
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>fastjson</artifactId>
			<version>${fastjson.version}</version>
		</dependency>
		<dependency>
			<groupId>org.elasticsearch.client</groupId>
			<artifactId>elasticsearch-rest-high-level-client</artifactId>
			<version>${elasticsearch.version}</version>
		</dependency>
		<!-- <dependency>
             <groupId>io.searchbox</groupId>
             <artifactId>jest</artifactId>
             <version>${jest.version}</version>
        </dependency> -->
	</dependencies>
	<!-- <profiles>
		<profile>
			<id>sonatype-oss-release</id> -->
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-compiler-plugin</artifactId>
						<version>3.7.0</version>
						<configuration>
							<source>${java.version}</source>
							<target>${java.version}</target>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<version>3.0.1</version>
						<executions>
							<execution>
								<id>attach-source</id>
								<phase>package</phase>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>3.0.2</version>
						<configuration>
							<archive>
								<manifestEntries>
									<Change>${maven.build.timestamp}</Change>
									<Built-Date>${maven.build.timestamp}</Built-Date>
									<Dependency-Log4j2-Version>${log4j2.version}</Dependency-Log4j2-Version>
									<Dependency-Fastjson-Version>${fastjson.version}</Dependency-Fastjson-Version>
									<Dependency-Elasticsearch-Version>${elasticsearch.version}</Dependency-Elasticsearch-Version>
								</manifestEntries>
							</archive>
							<excludes>
								<exclude>log4j2.properties</exclude>
							</excludes>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-shade-plugin</artifactId>
						<version>3.1.0</version>
						<dependencies>
							<dependency>
								<groupId>com.github.edwgiz</groupId>
								<artifactId>maven-shade-plugin.log4j2-cachefile-transformer</artifactId>
								<version>2.1</version>
							</dependency>
						</dependencies>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>shade</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>log4j2.xml</exclude>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<relocations>
								<relocation>
									<pattern>org.apache.logging.log4j</pattern>
									<shadedPattern>org.elasticsearch.log4j</shadedPattern>
								</relocation>
								<relocation>
									<pattern>com.fasterxml.jackson</pattern>
									<shadedPattern>org.elasticsearch.jackson</shadedPattern>
								</relocation>
								<relocation>
									<pattern>io.netty</pattern>
									<shadedPattern>org.elasticsearch.io.netty</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.jboss.netty</pattern>
									<shadedPattern>org.elasticsearch.jboss.netty</shadedPattern>
								</relocation>
								<relocation>
									<pattern>com.google</pattern>
									<shadedPattern>org.elasticsearch.guava</shadedPattern>
								</relocation>
								<relocation>
									<pattern>com.alibaba.fastjson</pattern>
									<shadedPattern>org.elasticsearch.fastjson</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.springframework</pattern>
									<shadedPattern>com.springframework</shadedPattern>
								</relocation>
							</relocations>
							<transformers>
								<transformer implementation="com.github.edwgiz.mavenShadePlugin.log4j2CacheTransformer.PluginsCacheFileTransformer" />
							</transformers>
						</configuration>
					</plugin>
				</plugins>
			</build>
		<!-- </profile>
	</profiles> -->
	<distributionManagement>
		<!-- <repository> <id>central</id> <url>http://central.maven.org/maven2/</url> 
			</repository> -->
		<repository>
			<id>Sonatype</id>
			<!-- <url>https://oss.sonatype.org/content/repositories/releases/</url> -->
			<url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>
		<snapshotRepository>
			<id>Sonatype</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
</project>